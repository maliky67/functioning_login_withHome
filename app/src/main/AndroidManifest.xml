<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/hatv1"
        android:label="FunctioningLogin"
        android:roundIcon="@drawable/hatv1"
        android:supportsRtl="true"
        android:theme="@style/Theme.FunctioningLogin"
        tools:targetApi="31">

        <!-- Bottom 4 Activities are for List Creation on Realtime Database -->
        <activity
            android:name=".HomePageUIClasses.UpdateActivity"
            android:exported="false" />

        <activity
            android:name=".HomePageUIClasses.DetailActivity"
            android:exported="false" />

        <activity
            android:name=".HomePageUIClasses.Upload_Data"
            android:exported="false" />

        <activity
            android:name=".HomePageUIClasses.Store_Data_Realtime"
            android:exported="true" />

        <!-- Launcher Activity: SignUpActivity -->
        <activity
            android:name=".LoginUIClasses.SignupActivity"
            android:exported="true">

        </activity>

        <activity
            android:name=".LoginUIClasses.LoginActivity"
            android:exported="true" >
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
