<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/giftCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <!-- âœ… FIXED: ShapeableImageView to regular ImageView -->
        <ImageView
            android:id="@+id/giftStatus"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:src="@drawable/baseline_lightbulb_24" />

        <TextView
            android:id="@+id/giftName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gift Name"
            android:layout_toEndOf="@id/giftStatus"
            android:textColor="@color/BorderBlue"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/giftURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/giftName"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:text="Gift URL"
            android:layout_toEndOf="@id/giftStatus"
            android:drawablePadding="4dp"
            android:maxLines="1"
            android:textColor="@color/BorderBlue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/giftPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$30"
            android:textSize="16sp"
            android:textColor="@color/BorderBlue"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
