<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dealCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- 🟢 Icon for the deal status/type -->
        <ImageView
            android:id="@+id/dealImage"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_lightbulb_24" />

        <!-- 🏷️ Deal Title -->
        <TextView
            android:id="@+id/dealTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/dealImage"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/deal_title"
            android:textSize="20sp"
            android:textColor="@color/BorderBlue"
            android:maxLines="1" />

        <!-- 🔗 Deal URL -->
        <TextView
            android:id="@+id/dealLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dealTitle"
            android:layout_toEndOf="@id/dealImage"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:text="@string/deal_link"
            android:textSize="14sp"
            android:textColor="@color/BorderBlue"
            android:maxLines="1" />

        <!-- 💰 Deal Price -->
        <TextView
            android:id="@+id/dealPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0"
            android:textSize="16sp"
            android:textColor="@color/BorderBlue"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
