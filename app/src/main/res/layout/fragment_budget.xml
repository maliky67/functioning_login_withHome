<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/budgetTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget Overview"
        android:textColor="#2D2FDF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp" />


    <!-- Toggle Tabs -->
    <RadioGroup
        android:id="@+id/categoryTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <RadioButton
            android:id="@+id/tabIdeas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ideas"
            android:checked="true"
            android:buttonTint="#2D2FDF"
            android:textColor="#000000"/>

        <RadioButton
            android:id="@+id/tabPurchased"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purchased"
            android:buttonTint="#2D2FDF"
            android:textColor="#000000"
            android:layout_marginStart="16dp"/>

        <RadioButton
            android:id="@+id/tabGifts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Gifts"
            android:buttonTint="#2D2FDF"
            android:textColor="#000000"
            android:layout_marginStart="16dp"/>
    </RadioGroup>

    <!-- Chart Toggle Button -->
    <ImageButton
        android:id="@+id/chartToggleButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_ac_unit_24"
        android:layout_gravity="end"
        android:background="?android:selectableItemBackgroundBorderless"
        android:contentDescription="Toggle Chart View"
        android:layout_marginBottom="8dp" />

    <!-- Chart Area -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/budgetBarChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="8dp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/budgetPieChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/budgetRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:clipToPadding="false" />

</LinearLayout>
